{
  "task": "usrnetv1",
  "scale": 4,
  "gpu_ids": [0],

  "datasets": {
    "train": {
      "name": "train_dataset",
      "dataset_type": "usrnet",
      "dataroot_H": "trainsets/train_combined",
      "dataroot_L": null,
      "H_size": 96,
      "use_flip": true,
      "use_rot": true,
      "scales": [1, 2, 3, 4],
      "dataloader_shuffle": true,
      "dataloader_batch_size": 48
    },
    "test": {
      "name": "test_dataset",
      "dataset_type": "usrnet",
      "dataroot_H": "testsets/set5",
      "dataroot_L": null
    }
  },

  "log_path": {
    "root": "train_log",
    "pretrained_model": null
  },

  "net": {
    "net_type": "usrnet",
    "n_iter": 8,
    "h_nc": 64,
    "in_nc": 4,
    "out_nc": 3,
    "nc": [64, 128, 256, 512],

    "init_type": "orthogonal",
    "init_bn_type": "uniform",
    "init_gain": 0.2
  },

  "train": {
    "optimizer_type": "adam",
    "optimizer_lr": 1e-4,
    "optimizer_wd": 0,
    "optimizer_betas": [0.9, 0.999],

    "scheduler_type": "MultiStepLR",
    "scheduler_milestones": [100000, 200000, 300000, 400000],
    "scheduler_gamma": 0.5,

    "checkpoint_test": 1000,
    "checkpoint_save": 1000,
    "checkpoint_print": 200
  },

  "test": {
    "testset_name": "BSDS100"
  }
}