{
  "task": "usrnet",
  "model": "plain4",
  "scale": 4,
  "gpu_ids": [0],
  "n_channels": 3,

  "datasets": {
    "train": {
      "name": "train_dataset",
      "dataset_type": "usrnet",
      "dataroot_H": "trainsets/DIV2K_train_HR",
      "dataroot_L": null,
      "H_size": 96,
      "use_flip": true,
      "use_rot": true,
      "scales": [1, 2, 3, 4],
      "dataloader_shuffle": true,
      "dataloader_num_workers": 4,
      "dataloader_batch_size": 48
    },
    "test": {
      "name": "test_dataset",
      "dataset_type": "usrnet",
      "dataroot_H": "testsets/set5",
      "dataroot_L": null
    }
  },

  "path": {
    "root": "train_log",
    "pretrained_model": null
  },

  "net": {
    "net_type": "usrnet",
    "n_iter": 6, // 8
    "h_nc": 32, // 64
    "in_nc": 4,
    "out_nc": 3,
    "nc": [16, 32, 64, 64],
    "nb": 2,
    "gc": 32,
    "ng": 2,
    "reduction" : 16,
    "act_mode": "R", // "BR" for BN+ReLU | "R" for ReLU
    "upsample_mode": "convtranspose", // "pixelshuffle" | "convtranspose" | "upconv"
    "downsample_mode": "strideconv", // "strideconv" | "avgpool" | "maxpool"

    "init_type": "orthogonal", // "orthogonal" | "normal" | "uniform" | "xavier_normal" | "xavier_uniform" | "kaiming_normal" | "kaiming_uniform"
    "init_bn_type": "uniform", // "uniform" | "constant"
    "init_gain": 0.2
  },

  "train": {
    "lossfn_type": "l1",
    "lossfn_weight": 1.0,

    "optimizer_type": "adam",
    "optimizer_lr": 1e-4,
    "optimizer_wd": 0,
    "optimizer_betas": [0.9,0.999],

    "scheduler_type": "MultiStepLR",
    "scheduler_milestones": [100000, 200000, 300000, 400000],
    "scheduler_gamma": 0.5,

    "checkpoint_test": 5000,
    "checkpoint_save": 5000,
    "checkpoint_print": 200
  }
}